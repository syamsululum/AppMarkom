@model AppMarkom.Web.ViewModels.employee.employeeIndex

@{
    Layout = "_Layout";

}

    <section class="content">
        <div class="container-fluid">
            <!-- /.row -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Fixed Header Table</h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0" style="height: 300px;">
                            <table class="table table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th>Employee ID Number</th>
                                        <th>Employee Name</th>
                                        <th>Company Name</th>
                                        <th>Created Date</th>
                                        <th>Created By</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.employees)
                                    {
                                        <tr>
                                            <th>@item.Code</th>
                                            <th>@item.FirstName  @item.LastName</th>
                                            <th>@item.MCompany.Name</th>
                                            <th>@item.CreatedDate</th>
                                            <th>@item.CreatedBy</th>
                                            <th>
                                                <a style="cursor:pointer" id="btnShow" data-id="@item.Id"><i class="fas fa-search"></i></a>
                                                <a style="cursor:pointer" id="btnEdit" data-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                                                <a style="cursor:pointer" id="btnDelete" data-id="@item.Id"><i class="fas fa-trash"></i></a>
                                            </th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>