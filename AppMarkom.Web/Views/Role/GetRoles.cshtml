@model AppMarkom.Web.ViewModels.role.roleIndex
@{
    Layout = "_Layout";
}


<section class="content">
    <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-2" style="border-collapse: separate;" >
                                <a class="btn btn-primary btn-sm float-right">Add New</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <input type="text" class="form-control" placeholder=".col-3">
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" placeholder=".col-4">
                            </div>
                            <div class="col-2">
                                <input type="text" class="form-control" placeholder=".col-5">
                            </div>
                            <div class="col-2">
                                <input type="text" class="form-control" placeholder=".col-5">
                            </div>
                            <div class="col-1">
                                <a class="btn btn-warning btn-sm" >Search</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0" style="height: 300px;">
                        <table class="table table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th>Role Code</th>
                                    <th>Role Name</th>
                                    <th>Created Date</th>
                                    <th>Created By</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.roles)
                                {
                                    <tr>
                                        <th>@item.Code</th>
                                        <th>@item.Name</th>
                                        <th>@item.CreatedDate</th>
                                        <th>@item.CreatedBy</th>
                                        <th>
                                            <a style="cursor:pointer" id="btnShow" data-id="@item.Id"><i class="fas fa-search"></i></a>
                                            <a style="cursor:pointer" id="btnEdit" data-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                                            <a style="cursor:pointer" id="btnDelete" data-id="@item.Id"><i class="fas fa-trash"></i></a>
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>